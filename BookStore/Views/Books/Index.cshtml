@using BookStore.ViewModels
@model List<BookVM>

@{
    Layout = "_Dashboard_Layout";
    ViewData["Title"] = "Books";
}

@section subTitle {
    Books
}


<div class="card w-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h3 class="card-title">Show</h3>
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary">create</a>

    </div>

    <div class="card-body">
        <table class="table table-bordered">
            @if (!Model.Any())
            {
                <p>no data found</p>
            }
            else
            {
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Publish Date</th>
                        <th>Image</th>
                        <th>Categories</th>

                        <th style="width:250px">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var itme in Model)
                    {
                        <tr>
                            <td>@itme.Id</td>
                            <td>@itme.Title</td>
                            <td>@itme.Author</td>
                            <td>@itme.Publisher</td>
                            <td>@itme.PublishDate</td>
                            <td><img src="~/image/books/@itme.ImageUrl" width="50px" alt="img" /></td>
                            <td>@string.Join(",",@itme.Categories)</td>



                            <td>
                                <a class="btn btn-sm btn-primary" asp-controller="Books" asp-action="Edit"
                                   asp-route-id="@itme.Id">
                                    <i class="fas fa-edit pe-2"></i>Edit
                                </a>
                                <a class="btn btn-sm btn-success" asp-controller="Books" asp-action="Details"
                                   asp-route-id="@itme.Id">
                                    <i class="fas fa-info-circle"></i>Details
                                </a>
                                <a class="btn btn-sm btn-danger js-delete" asp-controller="Books" asp-action="Delete"
                                   asp-route-id="@itme.Id">
                                    <i class="fas fa-trash"></i>Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>
</div>

